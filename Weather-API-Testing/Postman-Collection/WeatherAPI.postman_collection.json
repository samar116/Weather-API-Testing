{
  "info": {
    "name": "WeatherAPI",
    "_postman_id": "12345678-abcd-efgh-ijkl-1234567890ab",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Get Current Weather - Valid City",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "https://api.open-meteo.com/v1/forecast?latitude=30.033&longitude=31.233&current_weather=true",
          "protocol": "https",
          "host": [
            "api",
            "open-meteo",
            "com"
          ],
          "path": [
            "v1",
            "forecast"
          ],
          "query": [
            {
              "key": "latitude",
              "value": "30.033"
            },
            {
              "key": "longitude",
              "value": "31.233"
            },
            {
              "key": "current_weather",
              "value": "true"
            }
          ]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 200', function () {",
              "  pm.response.to.have.status(200);",
              "});",
              "pm.test('Response has current_weather', function () {",
              "  pm.expect(pm.response.json()).to.have.property('current_weather');",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Get Current Weather - Missing Params",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "https://api.open-meteo.com/v1/forecast"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Client/Server error for missing params', function () {",
              "  pm.expect(pm.response.code).to.be.oneOf([400,404]);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    }
  ]
